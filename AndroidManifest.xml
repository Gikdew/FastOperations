<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.apkdeveloper.fastoperations"
    android:versionCode="4"
    android:versionName="1.21" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        
        <activity
            android:name="net.apkdeveloper.fastoperations.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">            
        </activity>
        
        <activity
                android:name="net.apkdeveloper.fastoperations.Home"
                android:label="@string/home"
                android:screenOrientation="portrait">                
		</activity>

       <activity
                android:name="net.apkdeveloper.fastoperations.Primera"
                android:label="@string/home"
                android:screenOrientation="portrait">                
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>                
        </activity>
        
        <activity
                android:name="net.apkdeveloper.fastoperations.FinLevel"
                android:screenOrientation="portrait"
                >            
        </activity>
                                 
        <activity
                android:name="net.apkdeveloper.fastoperations.mandarServer"
                android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="net.apkdeveloper.fastoperations.LevelSelector"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >            
        </activity>
        
         <activity
            android:name="net.apkdeveloper.fastoperations.createUsername"
            android:label="@string/app_name"
            android:screenOrientation="portrait">            
        </activity>

<activity android:name="com.google.ads.AdActivity"
android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>

</application>

<meta-data android:value="true" android:name="ADMOB_ALLOW_LOCATION_FOR_ADS" /> - See more at: http://blog.kerul.net/2012/08/example-how-to-install-google-admob-6x.html#sthash.jygNHAkw.dpuf

</manifest>
